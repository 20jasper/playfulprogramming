{
	"name": "unicorn-utterances-site",
	"private": true,
	"description": "Learning programming from magically majestic words",
	"version": "0.3.0-alpha.1",
	"bugs": {
		"url": "https://github.com/unicorn-utterances/unicorn-utterances/issues"
	},
	"homepage": "https://unicorn-utterances.com",
	"keywords": [
		"blog",
		"education",
		"programming"
	],
	"license": "MPL-2.0",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/unicorn-utterances/unicorn-utterances.git"
	},
	"scripts": {
		"debug": "env-cmd -f ./src/environments/debug.env astro dev --experimental-integrations",
		"dev": "env-cmd -f ./src/environments/dev.env astro dev --experimental-integrations",
		"dev:vercel": "env-cmd -f ./src/environments/dev.env vercel dev",
		"start": "astro dev --experimental-integrations",
		"build": "npm run search-index && astro build --experimental-integrations",
		"build-beta": "npm run search-index && env-cmd -f ./src/environments/beta.env astro build --experimental-integrations",
		"preview": "astro preview --experimental-integrations",
		"host:local": "cd dist && ws --http2 --compress",
		"format": "prettier -w . --cache --plugin-search-dir=.",
		"lint": "eslint . --ext .js,.ts,.astro",
		"search-index": "node --experimental-loader esbuild-node-loader src/build-scripts/search-index.ts",
		"tsc": "tsc --noEmit && astro check",
		"test": "",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@astrojs/image": "^0.11.4",
		"@astrojs/mdx": "^0.11.6",
		"@astrojs/preact": "^1.2.0",
		"@remark-embedder/core": "^3.0.1",
		"@remark-embedder/transformer-oembed": "^3.0.0",
		"@types/classnames": "^2.3.1",
		"@types/node": "^18.11.9",
		"@types/parse5": "^7.0.0",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.42.1",
		"@typescript-eslint/parser": "^5.42.1",
		"@vercel/node": "^2.6.2",
		"astro": "^1.6.7",
		"astro-icon": "^0.8.0",
		"classnames": "^2.3.2",
		"dayjs": "^1.11.6",
		"esbuild-node-loader": "^0.8.0",
		"eslint": "^8.27.0",
		"eslint-plugin-astro": "^0.21.0",
		"eslint-plugin-jsx-a11y": "^6.6.1",
		"env-cmd": "^10.1.0",
		"feed": "^4.2.2",
		"fuse.js": "^6.6.2",
		"gatsby-remark-embedder": "^6.0.1",
		"gray-matter": "^4.0.3",
		"hast": "^1.0.0",
		"hast-util-from-html": "^1.0.0",
		"hast-util-has-property": "^2.0.0",
		"hast-util-heading-rank": "^2.1.0",
		"hast-util-to-string": "^2.0.0",
		"husky": "^8.0.2",
		"image-size": "^1.0.2",
		"junk": "^4.0.0",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"prettier-plugin-astro": "^0.7.0",
		"rehype-raw": "^6.1.1",
		"rehype-retext": "^3.0.2",
		"rehype-slug-custom-id": "^1.1.0",
		"remark-behead": "^3.1.0",
		"remark-gfm": "^3.0.1",
		"remark-shiki-twoslash": "^3.1.0",
		"remark-unwrap-images": "^3.0.1",
		"retext-english": "^4.1.0",
		"rollup-plugin-copy": "^3.4.0",
		"sass": "^1.56.1",
		"slash": "^5.0.0",
		"terser": "^5.15.1",
		"unified": "^10.1.2",
		"unist-util-replace-all-between": "^0.1.1",
		"unist-util-visit": "^4.1.1"
	},
	"lint-staged": {
		"*.{js,ts,astro}": "eslint --cache --fix",
		"*.{js,ts,astro,jsx}": "prettier --write"
	},
	"dependencies": {
		"@astrojs/sitemap": "^1.0.0",
		"medium-zoom": "^1.0.6",
		"preact": "^10.11.2",
		"probe-image-size": "^7.2.3",
		"vite-plugin-svgr": "^2.2.2"
	}
}
