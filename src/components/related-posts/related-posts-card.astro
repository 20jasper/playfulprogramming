---
import style from "./related-posts-card.module.scss";
import { getHrefContainerProps } from "utils/href-container-script";
import { UnicornInfo } from "types/UnicornInfo";

interface RelatedPostsCardProps {
	title: string;
	slug: string;
	authors: UnicornInfo[];
}

const { title, slug, authors } = Astro.props as RelatedPostsCardProps;
---

<span
	{...getHrefContainerProps(`/posts/${slug}`)}
	class={style.container}
	href={`/posts/${slug}`}
>
	<span class={`text-style-body-medium-bold ${style.articleTitle}`}
		>{title}</span
	>
	<span class={`text-style-body-small-bold ${style.authorsList}`}>
		{
			authors.map((author, i) => (
				<a href={`/unicorns/${author.id}`}>
					{[author.name, i + 1 < authors.length ? "," : ""]}
				</a>
			))
		}
	</span>
</span>
