---
const props = Astro.props as astroHTML.JSX.ButtonHTMLAttributes;
---

<style>
	.big-outlined-button {
		padding: var(--btn-ver-padding_large) var(--btn-hor-padding_large);
		background: transparent;
		color: var(--btn-foreground_outlined);
		border-radius: var(--btn-corner-radius);
		border-width: var(--btn-border-width_large);
		border-color: var(--btn-border);
		border-style: solid;
	}
</style>
<button {...props} class="text-style-button big-outlined-button">
	<slot />
</button>
