---
const props = Astro.props as astroHTML.JSX.ButtonHTMLAttributes;
---

<style>
	.big-filled-button {
		padding: var(--btn-ver-padding-large) var(--btn-hor-padding-large);
		background: var(--btn-background_filled);
		color: var(--btn-foreground_filled);
		border-radius: var(--btn-corner-radius);
		border-width: var(--btn-border-width-large);
		border-color: var(--btn-background_filled);
	}
</style>
<button {...props} class="big-filled-button">
	<slot />
</button>
