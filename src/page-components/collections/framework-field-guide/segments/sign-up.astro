---
import { Picture } from "@astrojs/image/components";
import SignupForm from "../components/signup-form.astro";
import Discord from "../icons/discord.astro";
import Twitter from "../icons/twitter.astro";
import styles from "./sign-up.module.scss";
---

<div class={styles.signUpContainer}>
	<h4>
		<span class={`text-style-body-medium ${styles.thankYouForCheckingOut}`}
			>Thank you for checking out</span
		>
		<span class={`text-style-headline-2 ${styles.seriesTitleContainer}`}
			><span class={styles.seriesTitle}>The Framework Field Guide</span> ðŸ“’</span
		>
	</h4>
	<div class={styles.signUpFormContainer}>
		<Picture
			class={styles.avatar}
			alt=""
			src={import("../../../../../public/content/data/crutchcorn.png")}
			sizes={"72"}
			widths={[72]}
			formats={["webp", "avif", "png"]}
		/>
		<h5 class={`text-style-headline-5 ${styles.signUpForUpdates}`}>
			Sign up for updates
		</h5>
		<p class={`text-style-body-medium-bold ${styles.signUpInstructions}`}>
			Now that youâ€™re familiar with all of the books, make sure to sign up for
			updates!
		</p>
		<SignupForm />
		<p class={`text-style-body-medium ${styles.signUpDisclaimer}`}>
			All of the emails sent out will be strictly about important updates
			regarding the progress of the books.
		</p>
		<div class={styles.getInvolvedContainer}>
			<h5 class={`text-style-headline-5 ${styles.getInvolvedHeader}`}>
				Get involved
			</h5>
			<p class={`text-style-body-medium-bold ${styles.getInvolvedExplainer}`}>
				Follow me on Twitter or join our thriving Discord coding community!
			</p>
		</div>
		<div class={styles.buttonContainer}>
			<a
				class={`ffg-button-base ${styles.twitterButton}`}
				href="https://twitter.com/crutchcorn"
				aria-label="Corbin's Twitter"
			>
				<Twitter aria-hidden={true} />
			</a>
			<a
				class={`ffg-button-base ${styles.discordButton}`}
				href="https://discord.gg/FMcvc6T"
				aria-label="The Discord for Unicorn Utterances, the community behind The Framework Field Guide"
			>
				<Discord aria-hidden={true} />
			</a>
		</div>
	</div>
</div>
