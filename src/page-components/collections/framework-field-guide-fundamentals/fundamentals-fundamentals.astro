---
import styles from "./fundamentals-fundamentals.module.scss";
import "../framework-field-guide/components/shared-section-styling.scss";
import FundamentalsBookCover from "../framework-field-guide/segments/fundamentals-book-cover.astro";
import BookSvg from "../framework-field-guide/icons/book.astro";
import ToolsSvg from "../framework-field-guide/icons/tools.astro";
import LinksSvg from "../framework-field-guide/icons/link.astro";
import ArrowSvg from "../framework-field-guide/icons/arrow.svg";
import LinkSvg from "../framework-field-guide/icons/link.svg";
import CollectionTableOfContents from "./collection-table-of-contents-fundamentals.astro";
import { PostInfo } from "types/PostInfo";
import { unicorns } from "utils/data";

const frontmatter = {
	title: "The Framework Field Guide - Fundamentals",
	associatedSeries: "Framework Field Guide",
	description:
		"A practical and free way to teach Angular, React, and Vue all at once, so you can choose the right tool for the job and learn the underlying concepts in depth.",
	authors: ["crutchcorn"],
	coverImg: "/custom-content/collections/framework-field-guide/cover.png",
	socialImg:
		"/custom-content/collections/framework-field-guide/framework_field_guide_social.png",
	type: "book",
	published: "2023-01-01T13:45:00.284Z",
	buttons: [{ text: "Read now", url: "/posts/preface" }],
	authorsMeta: [unicorns.find((uni) => uni.id === "crutchcorn")],
};

const posts = await Astro.glob<PostInfo>(
	"../../../../content/blog/**/index.md"
);

const chapterList = posts
	.map((post) => post.frontmatter)
	.filter((post) => post.series === "The Framework Field Guide")
	.sort((postA, postB) => (postA.order > postB.order ? 1 : -1));
---

<section data-change-color-to="fund">
	<FundamentalsBookCover />

	<div class="class-book-1">
		<div
			class={`book-section ${styles.itemsContainer}`}
			style="background: var(--section-background);">
			<h2 class="book-bio text-style-headline-2">What you'll need</h2>
			<div>
				<section class={styles.adventureContinuesContainer}>
					<div>
						<div class={styles.titleContainer}>
							<BookSvg aria-hidden={true} />
							<span class={styles.title}>Basic knowledge of CSS and JavaScript</span>
							<span aria-hidden="true" style="opacity: 0;">Basic knowledge of CSS and JavaScript</span>
                			<span aria-hidden="true" style="opacity: 0;">An IDE that supports your framework of choice</span>
						</div>
						<p>
							<LinksSvg aria-hidden={true} style="visibility: hidden" />
							<span>Helpful Links</span>
						</p>
						<ul class={styles.gridItems}>
							<li class={`text-style-body-large-bold`}>
								<a href="" class={styles.gridItem}>The basics of CSS</a>
							</li>

							<li class={`text-style-body-large-bold`}>
								<a href="" class={styles.gridItem}>How HTML works</a>
							</li>

							<li class={`text-style-body-large-bold`}>
								<a href="" class={styles.gridItem}>JS Beginner's Guide</a>
							</li>
						</ul>
					</div>
					<div>
						<div class={styles.titleContainer}>
							<BookSvg aria-hidden={true} />
							<span class={styles.title}>An IDE that supports your framework of choice</span>
                			<span aria-hidden="true" style="opacity: 0;">An IDE that supports your framework of choice</span>
							<span aria-hidden="true" style="opacity: 0;">Basic knowledge of CSS and JavaScript</span>
						</div>
						<p>
							<LinksSvg aria-hidden={true} style="visibility: hidden" />
							<span>Helpful Links</span>
						</p>
						<ul class={styles.gridItems}>
							<li class={`text-style-body-large-bold`}>
								<a href="" class={styles.gridItem}>How to install VSCode</a>
							</li>

							<li class={`text-style-body-large-bold`}>
								<a href="" class={styles.gridItem}
									>How to actually use the damn thing</a>
							</li>
						</ul>
					</div>
				</section>
			</div>
			<br />
			<br />
			<CollectionTableOfContents collection={frontmatter} posts={chapterList} />
			<section>
				<h2 class="book-bio text-style-headline-2">What you'll learn</h2>

				<div class={`${styles.stepCardContainer}`}>
					<div class={`${styles.stepCard}`}>
						<h2 class="book-bio text-style-headline-5">
							Write your first components
						</h2>
						<p>
							Get your introduction to components - learn what they are and why
							they're useful.
						</p>
						<h2 class={`text-style-headline-2 ${styles.stepCardNumber}`}>1</h2>
						<ul class={`${styles.stepCardItems}`}>
							<li class={`${styles.stepCardItem}`}>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Dynamic HTML
							</li>
							<li class={`${styles.stepCardItem}`}>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Lifecycle methods
							</li>
							<li class={`${styles.stepCardItem}`}>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Derived values
							</li>
							<li class={`${styles.stepCardItem}`}>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Forms
							</li>
						</ul>
					</div>
					<div class={`${styles.stepCard}`}>
						<h2 class="book-bio text-style-headline-5">
							Control component hierarchy
						</h2>
						<p>
							Just like HTML elements, components form relationships with
							one-another
						</p>
						<h2 class={`text-style-headline-2 ${styles.stepCardNumber}`}>2</h2>
						<ul class={`${styles.stepCardItems}`}>
							<li>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Projected Content Reference
							</li>
							<li>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Access underlying DOM nodes
							</li>
							<li>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Dependency injection
							</li>
							<li>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Access Component's intenrals
							</li>
						</ul>
					</div>
					<div class={`${styles.stepCard}`}>
						<h2 class="book-bio text-style-headline-5">
							Share component logic
						</h2>
						<p>
							A huge boon to components is that you can easily share code in
							your apps.
						</p>
						<h2 class={`text-style-headline-2 ${styles.stepCardNumber}`}>3</h2>
						<ul class={`${styles.stepCardItems}`}>
							<li>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								React Hooks
							</li>
							<li>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Angular services
							</li>
							<li>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Vue Custom Compositions
							</li>
							<li>
								<img alt="" src={ArrowSvg} class={styles.stepCardItemBullet} />
								Directives
							</li>
						</ul>
					</div>
				</div>
			</section>
		</div>
	</div>
</section>
