---
import Document from "../layouts/document.astro";
import SEO from "components/seo/seo.astro";
import About from "../page-components/about/about.astro";
import { getOtherAboutLocales } from "src/page-components/about/about-helpers";

const aboutUsLocales = await Astro.glob("../../content/site/about-us*.md");

const locale = "en";

const { otherLocales } = getOtherAboutLocales(locale, aboutUsLocales);
---

<Document lang={locale}>
	<SEO
		pathName={`/about`}
		title="About Us"
		slot="head"
		langData={{
			otherLangs: otherLocales,
			currentLang: locale,
		}}
	/>
	<About globResults={aboutUsLocales} locale={locale} />
</Document>
