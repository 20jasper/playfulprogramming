---
import Document from "../layouts/document.astro";
import SEO from "components/seo/seo.astro";

const locale = "en";
---

<Document lang={locale}>
	<SEO title="Thank You!" slot="head" />

	<main class="listViewContent">
		<h1>Thank you for subscribing.</h1>

		<p>
			Your subscription is now confirmed. You can expect to receive emails as we
			create new content.
		</p>
	</main>
</Document>

<style lang="scss">
	.proudUnicorn {
		display: block;
		margin: 0 auto;
		max-width: 80%;
		height: auto;

		background-color: var(--primary);
		border-radius: 50%;
		overflow: hidden;
	}

	main {
		h1,
		p {
			text-align: center;
		}
	}
</style>
