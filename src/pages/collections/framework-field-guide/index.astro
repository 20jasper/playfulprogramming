---

<Document>
	<script>
		import { enableTabs } from "../../../utils/markdown/scripts/tabs";
		enableTabs();
	</script>
	<link
		slot="head"
		href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,400;0,500;0,600;0,700;0,800;1,400;1,500;1,600;1,700;1,800&display=swap"
		rel="stylesheet"
	/>
	<link
		slot="head"
		href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap"
		rel="stylesheet"
	/>
	<link
		slot="head"
		href="https://fonts.googleapis.com/css2?family=Changa+One:ital@0;1&family=Fira+Code&display=swap"
		rel="stylesheet"
	/>
</Document>
<script>
	window.onload = () => {
		const els = document.querySelectorAll("[data-move-on-scroll-by]");
		const mediaQuery = window.matchMedia("(prefers-reduced-motion: reduce)");

		function moveItems() {
			els.forEach((el: HTMLElement) => {
				let px =
					document.documentElement.scrollTop *
					Number(el.dataset.moveOnScrollBy);
				// Mobile
				if (window.innerWidth < 600) {
					px = px / 3;
				}
				el.style.transform = `translate3d(0px, ${px}px, 0px)`;
			});
		}
		if (!mediaQuery.matches) {
			window.addEventListener("scroll", moveItems);
			window.addEventListener("touchmove", moveItems);
		}
		mediaQuery.addEventListener("change", () => {
			if (mediaQuery.matches) {
				els.forEach((el: HTMLElement) => (el.style.transform = ""));
				window.removeEventListener("scroll", moveItems);
				window.removeEventListener("touchmove", moveItems);
			} else {
				window.addEventListener("scroll", moveItems);
				window.addEventListener("touchmove", moveItems);
			}
		});
	};
</script>
<Hero />
<Fundamentals />
<Ecosystem />
<Internals />
<TheRestContainer>
	<YourGuide />
	<CodeBlock />
	<AdventureContinues />
</TheRestContainer>
