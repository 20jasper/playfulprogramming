---
import SearchPage from "../views/search/search-page";
import Document from "../layouts/document.astro";
import { getUnicornProfilePicMap } from "../utils/get-unicorn-profile-pic-map";
import SEO from "../components/seo/seo.astro";

const unicornProfilePicMap = await getUnicornProfilePicMap();
---

<Document lang={"en"} size="xl">
	<SEO
		title="Search"
		description="Find your favorite articles and collections on Unicorn Utterances easier than ever!"
		slot="head"
	/>
	<SearchPage
		client:only="preact"
		unicornProfilePicMap={unicornProfilePicMap}
	/>
</Document>
