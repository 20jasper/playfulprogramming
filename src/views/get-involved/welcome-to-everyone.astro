---
import style from "./welcome-to-everyone.module.scss";
import { LargeButton } from "../../components/button/button";
import * as data from "../../utils/data";
import { Icon } from "astro-icon/components";
---

<div class={style.container}>
	<div class={style.colorContainer}>
		<div class={style.textContainer}>
			<h3 class={`text-style-headline-4 ${style.title}`}>
				Welcome to everyone
			</h3>
			<p class={`text-style-body-large ${style.explainer}`}>
				From coding novices to seasoned engineers - weâ€™d love to have you join
				us on our mission.
			</p>
		</div>
		<div class={style.buttonContainer}>
			<LargeButton
				class={style.button}
				tag="a"
				variant="secondary-emphasized"
				href="#"
			>
				<Icon
					slot="leftIcon"
					style="width: 100%; height: 100%;"
					name={data.about.links.Discord.icon as never}
				/>
				Join our Discord
			</LargeButton>
		</div>
	</div>
</div>
