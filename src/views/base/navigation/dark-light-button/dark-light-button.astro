---
import { Icon } from "astro-icon";
import { IconOnlyButton } from "components/base";
import { translate } from "utils/translations";
---

<IconOnlyButton
	tag="button"
	id="theme-toggle-button"
	aria-pressed="false"
	aria-label={translate(Astro, "action.is_dark_mode_enabled")}
>
	<Icon name="dark" height="100%" width="100%" id="dark-icon" />
	<Icon
		name="light"
		height="100%"
		width="100%"
		id="light-icon"
		style="display: none;"
	/>
</IconOnlyButton>

<script>
	import { themeToggle } from "./theme-toggle";
	themeToggle();
</script>
