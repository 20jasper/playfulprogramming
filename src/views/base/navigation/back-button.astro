---
import { Icon } from "astro-icon";
import { Button } from "components/base";
import { removePrefixLanguageFromPath, translate } from "utils/translations";

const path = removePrefixLanguageFromPath(Astro.url.pathname);
const isHome = path === "/";
---

{
	!isHome && (
		<Button
			tag="button"
			id="backbtn"
			aria-label={translate(Astro, "action.go_back")}
		>
			<Icon width="24" height="24" name="back" />
		</Button>
	)
}

<script>
	import { backButtonListener } from "./back-button";
	backButtonListener();
</script>
